<h1 class="mb-3">タスク一覧</h1>

<table class="table table-striped table-bordered mb-3">
  <thead>
    <th>#</th>
    <th>Task Content</th>
    <th>Status</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <th><%= link_to task.id, task %></th>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tasks %>

<%= link_to '新規タスクの投稿', new_task_path, class: 'btn btn-primary' %>
